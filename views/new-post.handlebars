<div class="card">
    <h2 class="card-header">New Post</h2>
    <form class="card-body" id="new-post-form">
        <input type="hidden" name="post-id" value="{{post.id}}" />
        <div>
            <label class="form-label">Title:</label>
            <input class="form-input" type="text" name="post-title" placeholder="Post Title"/>
        </div>

        <div>
            <label class="form-label">Content:</label>
            <textarea class="form-textarea form-input" name="post-body" data-number="8"></textarea>
        </div>

        <button class="btn btn-primary">CREATE</button>
    </form>
</div>
<script src="/js/new.js"></script>