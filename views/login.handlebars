<form id="login-form">
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            <input type="text" id="username-input-login" placeholder="Username">
        </div>
    </div>
    <div class="form-group row">
        <label  class="col-sm-2 col-form-label" for="inputPassword">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password-input-login" placeholder="Password">
        </div>
    </div>
    <div class="form-group row">
        <button type="submit">Login</button>
    </div>
</form>

<div style="margin-top: 10px;">Don't have an account?<a href="/signup">Sign up Here!</a></div>

